<%=render 'users/index' unless current_user%>
      
  <div id="posts" class="transitions-enabled infinite-scroll clearfix">
    <% @posts.each do |post| %>
      
 	<div class="box">
        <%= link_to image_tag(post.image.url(:medium) ), post%> <br/>
        <%= post.description %> <br/>
        <strong><%= post.user.name if post.user %> </strong>
        

        <% if post.user == current_user %>
        <%= link_to 'Edit', edit_post_path(post) %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %> <br/>
        <%end%>
        <br/>
   
      </div>
    <% end %>
 </div>



